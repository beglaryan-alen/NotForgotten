<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NotForgotten.Views.UploadGreetingCardDetails.OrientationView">
    <Grid ColumnDefinitions="Auto, Auto"
          VerticalOptions="Start"
          HorizontalOptions="Center">
        <Image Source="orientation_1">
            <Image.GestureRecognizers>
                <TapGestureRecognizer Command="{Binding HorizontalCommand}"/>
            </Image.GestureRecognizers>
        </Image>
        <Image Source="orientation_2"
               Grid.Column="1">
            <Image.GestureRecognizers>
                <TapGestureRecognizer Command="{Binding VerticalCommand}"/>
            </Image.GestureRecognizers>
        </Image>
        
    </Grid>
</ContentView>