<?xml version="1.0" encoding="UTF-8" ?>
<StackLayout xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:NotForgotten.Controls"
             xmlns:resources="clr-namespace:NotForgotten.Resources"
             x:Class="NotForgotten.Controls.CustomEntryControl"
             Spacing="10"
             x:Name="customEntry">

    <Label Text="{Binding Title, Source={x:Reference customEntry}}"
           FontFamily="{Binding TitleFontFamily, Source={x:Reference customEntry}}"
           IsVisible="{Binding HasTitle, Source={x:Reference customEntry}}"
           FontSize="{Binding TitleFontSize, Source={x:Reference customEntry}}"
           TextColor="{Binding TitleColor, Source={x:Reference customEntry}}"/>

    <Frame BackgroundColor="{Binding CustomBackgroundColor, Source={x:Reference customEntry}}"
           HasShadow="False"
           Padding="20, 12"
           CornerRadius="{Binding CornerRadius, Source={x:Reference customEntry}}">

        <Grid ColumnDefinitions="auto, *, auto">

            <Image Source="{Binding LeftIconSource, Source={x:Reference customEntry}}"
                   IsVisible="{Binding HasLeftIcon, Source={x:Reference customEntry}}"
                   VerticalOptions="Center"/>

            <controls:BorderlessEntry Placeholder="{Binding Placeholder, Source={x:Reference customEntry}}"
                                      IsPassword="{Binding IsPassword, Source={x:Reference customEntry}}"
                                      PlaceholderColor="#C9C9C9"
                                      FontSize="12"
                                      Grid.Column="1"
                                      FontFamily="{Binding FontFamily, Source={x:Reference customEntry}}"
                                      Text="{Binding Text, Source={x:Reference customEntry}, Mode=TwoWay}"/>

            <Image Source="{Binding PassRightIcon, Source={x:Reference customEntry}}"
                   Grid.Column="2"
                   VerticalOptions="Center"
                   IsVisible="{Binding IsPassRightIconVisible, Source={x:Reference customEntry}}">
                <Image.GestureRecognizers>
                    <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped"/>
                </Image.GestureRecognizers>
            </Image>

        </Grid>

    </Frame>

</StackLayout>